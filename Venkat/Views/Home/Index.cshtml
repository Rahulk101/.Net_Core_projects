@model IEnumerable<Venkat.Models.Employee>

@{
    ViewData["Title"] = "Home Page";
}

<div class="card-deck">
    @foreach (var employee in Model)
    {
        <div class="card m-3">
            <div class="card-header">
                <h3>@employee.Name</h3>
            </div>
            <img class="card-img-top" asp-append-version="true" src="~/images/Speaker-18805.jpg" />
            <div class="card-footer text-center">
                @* @Html.ActionLink("View","details","Home",new{id=employee.Id}) *@
                @* <a href='@Url.Action("details", "home", new { id = employee.Id })'
                class="btn btn-primary">Show</a> *@
                @* <a href="/home/details/@employee.Id" class="btn btn-primary">View</a> *@
                <a asp-controller="home" asp-action="details" asp-route-id="@employee.Id" 
                class="btn btn-primary m-1">View</a>
                <a asp-controller="home" asp-action="edit" asp-route-id="@employee.Id"
                 class="btn btn-primary m-1">Edit</a>
                <a href="#" class="btn btn-danger m-1">Delete</a>
            </div>
        </div>
    }
</div>
